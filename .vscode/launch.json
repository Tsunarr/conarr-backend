{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Débogueur Python : FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["pyconarr.main:app", "--reload"],
      "jinja": true
    },
    {
      "name": "Python: Pytest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-m", "unit or component", "-s", "--pdb"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}"
    }
  ]
}
